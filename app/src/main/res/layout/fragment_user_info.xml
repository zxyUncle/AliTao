<?xml version="1.0" encoding="utf-8"?><!-- 功能： -->
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cffffff"
    android:overScrollMode="never"
    android:fillViewport="true"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/dp_15"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <!--姓名-->
            <TextView
                android:id="@+id/tvName"
                android:layout_width="@dimen/dp_70"
                android:layout_height="wrap_content"
                android:text="姓名："
                android:textColor="@color/c333333"
                android:textSize="@dimen/sp_16" />

            <EditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/et_noframe"
                android:hint="真实姓名"
                android:inputType="text"
                android:lines="1"
                android:maxLength="11"
                android:padding="@dimen/dp_10"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>


        <View
            android:id="@+id/mView1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/cf0f0f0" />
        <!--    预留手机号    -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvPhoto"
                android:layout_width="@dimen/dp_70"
                android:layout_height="wrap_content"
                android:text="手机号："
                android:textColor="@color/c333333"
                android:textSize="@dimen/sp_16" />

            <EditText
                android:id="@+id/etPhoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/et_noframe"
                android:hint="银行预留手机号码"
                android:inputType="phone"
                android:lines="1"
                android:maxLength="11"
                android:padding="@dimen/dp_10"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>

        <View
            android:id="@+id/mView2"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/cf0f0f0" />
        <!--    银行卡号    -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvBankCard"
                android:layout_width="@dimen/dp_70"
                android:layout_height="wrap_content"
                android:text="银行卡："
                android:textColor="@color/c333333"
                android:textSize="@dimen/sp_16" />

            <EditText
                android:id="@+id/etBankCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/et_noframe"
                android:hint="银行卡号"
                android:inputType="phone"
                android:lines="1"
                android:maxLength="30"
                android:padding="@dimen/dp_10"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>

        <View
            android:id="@+id/mView3"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/cf0f0f0" />
        <!--    交易密码    -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvDealPassword"
                android:layout_width="@dimen/dp_70"
                android:layout_height="wrap_content"
                android:text="密码："
                android:textColor="@color/c333333"
                android:textSize="@dimen/sp_16" />

            <EditText
                android:id="@+id/etDealPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/et_noframe"
                android:hint="交易密码"
                android:inputType="text"
                android:lines="1"
                android:maxLength="20"
                android:padding="@dimen/dp_10"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>

        <View
            android:id="@+id/mView7"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/cf0f0f0" />

        <View
            android:layout_width="match_parent"
            android:layout_height="60dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <RelativeLayout
                android:id="@+id/mFlFront"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_100"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/mImgFront"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@mipmap/scrxmzp" />

                <ImageView
                    android:id="@+id/mImageView"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:src="@mipmap/sczjzp" />

                <TextView
                    android:id="@+id/mTvFront"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/mImageView"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp_7"
                    android:text="上传人像面照片"
                    android:textColor="@color/c333333"
                    android:textSize="@dimen/sp_15" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/mFlBack"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_100"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/mImgBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@mipmap/scghmzp" />

                <ImageView
                    android:id="@+id/mImageView1"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:src="@mipmap/sczjzp" />

                <TextView
                    android:id="@+id/mTvBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/mImageView1"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp_7"
                    android:text="上传国徽面照片"
                    android:textColor="@color/c333333"
                    android:textSize="@dimen/sp_15" />

            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/mTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_25"
            android:text="@string/reminder"
            android:textColor="@color/AA0606"
            android:textSize="@dimen/sp_14" />

        <Button
            android:id="@+id/btnBankCardNext"
            android:layout_width="@dimen/dp_200"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dp_20"
            android:background="@drawable/btn_round_black"
            android:text="@string/next"
            android:textColor="@drawable/text_color_whilt"
            android:textSize="@dimen/sp_16"
            android:visibility="visible" />
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>

<?xml version="1.0" encoding="utf-8"?><!-- 功能： -->
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cffffff"
    android:fillViewport="true"
    android:overScrollMode="never"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/dp_15"
        android:visibility="visible">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="信息确认"
            android:textColor="@color/c333333"
            android:textSize="@dimen/sp_20" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:orientation="horizontal">
            <!--姓名-->
            <TextView
                android:id="@+id/tvName"
                android:layout_width="@dimen/dp_80"
                android:layout_height="wrap_content"
                android:text="姓名："
                android:textColor="@color/c333333"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/et_noframe"
                android:inputType="text"
                android:lines="1"
                android:maxLength="11"
                android:padding="@dimen/dp_10"
                android:text="张三"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>


        <!--    预留手机号    -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvPhoto"
                android:layout_width="@dimen/dp_80"
                android:layout_height="wrap_content"
                android:text="手机号码："
                android:textColor="@color/c333333"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/etPhoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/et_noframe"
                android:inputType="phone"
                android:lines="1"
                android:maxLength="11"
                android:padding="@dimen/dp_10"
                android:text="18682026492"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>
        <!--    身份证号码    -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/dp_80"
                android:layout_height="wrap_content"
                android:text="身份证号："
                android:textColor="@color/c333333"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/tvIdentityCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/et_noframe"
                android:inputType="phone"
                android:lines="1"
                android:padding="@dimen/dp_10"
                android:text="431224199907245123"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>
        <!--    银行卡号    -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/dp_80"
                android:layout_height="wrap_content"
                android:text="银行卡号："
                android:textColor="@color/c333333"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/etBankCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/et_noframe"
                android:inputType="phone"
                android:lines="1"
                android:padding="@dimen/dp_10"
                android:text="431224199907245123"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>

        <!--    银行名称    -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/dp_80"
                android:layout_height="wrap_content"
                android:text="银行名称："
                android:textColor="@color/c333333"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/tvBankName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/et_noframe"
                android:lines="1"
                android:padding="@dimen/dp_10"
                android:text="中国银行"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>
        <!--    交易密码    -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvDealPassword"
                android:layout_width="@dimen/dp_80"
                android:layout_height="wrap_content"
                android:text="密码："
                android:textColor="@color/c333333"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/etDealPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/et_noframe"
                android:inputType="text"
                android:lines="1"
                android:maxLength="20"
                android:padding="@dimen/dp_10"
                android:text="交易密码"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="100dp" />


        <Button
            android:id="@+id/btnComfig"
            android:layout_width="@dimen/dp_200"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dp_20"
            android:background="@drawable/btn_round_black"
            android:text="确定"
            android:textColor="@drawable/text_color_whilt"
            android:textSize="@dimen/sp_16"
            android:visibility="visible" />
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
